<%- contentFor('main')%>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://bootswatch.com/cosmo/bootstrap.min.css">
    <div class="mainbody container-fluid">
        <form action="/profile/update" action="post" enctype="multipart/form-data">
            <div style="padding-top:50px;">Â </div>
            <div class="col-lg-12 col-md-12">
                <div class="panel panel-default ">
                    <div class="panel-body">
                        <h1 class="panel-title pull-left" style="font-size:30px;"><strong>Profile</strong></h1>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 ">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h3 class="panel-title pull-left">Your photo</h3>
                        <br><br>
                        <div align="center">
                            <div class="col-lg-12 col-md-12">
                                <img class="thumbnail img-responsive" src="<%= user.profilepic%>" width="300px" height="300px">
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <label for="inputUpload" class="s3-btn s3-btn2" style="padding:10px;" type="button">
                                  <i class="fa fa-upload" aria-hidden="true"></i> Upload a new profile photo!</label>
                                <input id="inputUpload" type="file" name="inputUpload" style="visibility:hidden;">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">

                <div class="panel panel-default">
                    <div class="panel-body">
                        <h3 class="panel-title pull-left">Basic Info</h3>
                        <br><br>
                        <label for="inputName">Name</label>
                        <input id="inputName" class="form-control" type='text' name="inputName" value="<%=user.name%>">
                        <label for="inputEmail">Email</label>
                        <input id="inputEmail" class="form-control" type='email' name="inputEmail" value="<%=user.email%>">
                        <label for="inputUsername">Username</label>
                        <input id="inputUsername" class="form-control" type='text' name="inputUsername" value="<%=user.username%>">
                        <label for="inputPassword">Password</label>
                        <input id="inputPassword" class="form-control" type='password' name="inputPassword" value="">
                        <label for="inputConfirmPass">Confirm Password</label>
                        <input id="inputConfirmPass" class="form-control" type='password' name="inputConfirmPass" value="">
                        <label for="inputBio" >Your bio</label>
                        <textarea id="inputBio" name="inputBio" class="form-control" rows="3"></textarea>
                      </div>
                    </div>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h3 class="panel-title pull-left"> What are your <strong>Preferred Programing Languge</strong></h3>
                        <br><br>
                        <input list="language" id="selectLanguage" class="form-control">
                        <datalist id="language" class="">
                         <option value="" selected="selected"></option>
                         <option value="Java"></option>
                         <option value="C"></option>
                         <option value="C++"></option>
                         <option value="C#"></option>
                         <option value="Python"></option>
                         <option value="Visual Basic .NET"></option>
                         <option value="PHP"></option>
                         <option value="JavaScript"></option>
                         <option value="Delphi/Object Pascal"></option>
                         <option value="Swift"></option>
                         <option value="Perl"></option>
                         <option value="Ruby"></option>
                         <option value="Assembly language"></option>
                         <option value="R"></option>
                         <option value="Visual Basic"></option>
                         <option value=" Objective-C"> </option>
                         <option value="Go"></option>
                         <option value="MATLAB"></option>
                         <option value="PL/SQL"></option>
                         <option value="Scratch"></option>
                         <option value="SAS"></option>
                         <option value="D"></option>
                         <option value="Dart"></option>
                         <option value="ABAP"></option>
                         <option value="COBOL"></option>
                         <option value="Ada"></option>
                         <option value="Fortran"></option>
                         <option value="Transact-SQL"></option>
                         <option value="Lua"></option>
                         <option value="Scala"></option>
                         <option value="Logo"></option>
                         <option value="F#"></option>
                         <option value="Lisp"></option>
                         <option value="LabVIEW"></option>
                         <option value="Prolog"></option>
                         <option value="Haskell"></option>
                         <option value="Scheme"></option>
                         <option value="Groovy"></option>
                         <option value="RPG (OS/400)"></option>
                         <option value="Apex"></option>
                         <option value="Erlang"></option>
                         <option value="MQL4"></option>
                         <option value="Rust"></option>
                         <option value="Bash"></option>
                         <option value="Ladder Logic"></option>
                         <option value="Q"></option>
                         <option value="Julia"></option>
                         <option value="Alice"></option>
                         <option value="VHDL"></option>
                         <option value="Awk"></option>
                     </datalist>
                        <br>
                        <div id="resultOfLanguage">

                        </div>
                        <input id="inputLookingforjob" type="checkbox" name="inputLookingforjob" value="" style="margin:20px; margin-right:5px;">
                        <label for="inputLookingforjob"> Looking For Job ?</label>
                        <br>
                        <button id="addLanguage" class="s3-btn s3-btn2" type="button" style="height:30px; width:50px; padding:0px;">Add +</button>
                        <hr>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <button class="s3-btn s3-btn5" type="button" style="padding:10px;"><i class="fa fa-fw fa-times" aria-hidden="true"></i> Cancel</button>
                        <button class="s3-btn s3-btn2" style="padding:10px;" type="submit"><i class="fa fa-fw fa-check" aria-hidden="true"></i> Update Profile</button>
                    </div>
                </div>
            </div>

        </form>
    </div>
